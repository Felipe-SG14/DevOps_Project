<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PapaActivity"
    android:background="@drawable/temafinal">

        <ImageButton
        android:id="@+id/button"
        android:layout_width="123dp"
        android:layout_height="138dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="144dp"
        android:layout_marginRight="144dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/green"
        android:contentDescription="@string/btn_mandarubi"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ubi"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="163dp"
        android:layout_height="44dp"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:text="@string/btn_mandarubi"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="123dp"
        android:layout_height="93dp"

        android:backgroundTint="@color/grey"
        android:contentDescription="@string/btn_regresar"
        android:onClick="@string/btn_regresar"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />
</androidx.constraintlayout.widget.ConstraintLayout>